{% if filePath %}
    <div class="row">
        <div class="col-md-8">
            <img src="{{ filePath }}" alt="qrcode" width="550">
        </div>
        <div class="col-md-4">

            <h4 class="text-success mb-4">
                Essayer le Qr Code avec smartphone !

            </h4>
            <a href="{{ filePath }}" download="download" class="btn btn-primary mt-2 mb-2">
                <i class="fas fa-download" aria-hidden="true"></i>
                Télécharger QR Code
            </a>

        </div>
    </div>



{% endif %}
